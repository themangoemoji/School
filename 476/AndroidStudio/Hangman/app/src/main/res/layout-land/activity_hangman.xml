<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HangmanActivity"
    android:id="@+id/relativeLayout"
    android:orientation="horizontal"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gallowsView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/hm0"
        android:contentDescription="@string/gallows"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/view"
        android:layout_toStartOf="@+id/view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newgame"
        android:id="@+id/newGameButton"
        android:onClick="newGame"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/gallowsView"
        android:layout_toEndOf="@+id/gallowsView"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp" />

    <edu.msu.wrigh517.hangman.KeySelectView
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/newGameButton"
        android:layout_toRightOf="@+id/newGameButton"
        android:layout_marginLeft="20dp" />

</RelativeLayout>
