<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonStart"
        android:id="@+id/buttonStart"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/player2"
        android:layout_alignStart="@+id/player2"
        android:layout_alignRight="@+id/player2"
        android:layout_alignEnd="@+id/player2"
        android:onClick="onStartGame" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGrid"
        android:layout_below="@+id/player2"
        android:layout_marginTop="53dp"
        android:layout_alignLeft="@+id/player2"
        android:layout_alignStart="@+id/player2"
        android:layout_alignRight="@+id/player2"
        android:layout_alignEnd="@+id/player2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player1"
        android:ems="10"
        android:id="@+id/player1"
        android:inputType="text"
        android:layout_below="@+id/buttonHowTo"
        android:layout_alignRight="@+id/buttonHowTo"
        android:layout_alignEnd="@+id/buttonHowTo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/player2"
        android:ems="10"
        android:id="@+id/player2"
        android:layout_below="@+id/player1"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/splash"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/player1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonHowTo"
        android:id="@+id/buttonHowTo"
        android:onClick="onHowTo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
