<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.msu.hutteng3.fawfulsteampunked.GameBoard"
    android:background="@color/green">


    <edu.msu.hutteng3.fawfulsteampunked.GameBoardView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gameBoardView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageView90"
        android:background="@android:color/white"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView90"
        android:src="@drawable/pipe90"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/green" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewCap"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView90"
        android:layout_toEndOf="@+id/imageView90"
        android:src="@drawable/cap"
        android:background="@color/green" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewStraight"
        android:src="@drawable/straight"
        android:background="@color/green"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageViewCap"
        android:layout_toEndOf="@+id/imageViewCap" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewTee"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageViewStraight"
        android:layout_toEndOf="@+id/imageViewStraight"
        android:src="@drawable/tee"
        android:background="@color/green" />
</RelativeLayout>
